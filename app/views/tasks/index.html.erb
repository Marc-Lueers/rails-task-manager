<div class="container">
  <h1>My tasks</h1>
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Details</th>
        <th>Actions</th>
      </tr>
     </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.title %></td>
          <td><%= task.details %></td>
          <td>
            <%= link_to "Show", task_path(task) %>
            <%= link_to "Edit", edit_task_path(task) %>
            <%= link_to "Delete", task_path(task), method: :delete, data: {
            confirm: 'Are you sure?'
                }  %>
            <% end %>
          </td>
        </tr>
    </tbody>
  </table>
</div>
